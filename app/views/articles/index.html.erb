<h1>Articles</h1>
 
<%= link_to 'Add New Article', new_article_path, :class => 'button' %>


<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th colspan="3">Actions</th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to 'Delete', article_path(article),
              method: :delete,
              data: {confirm: 'Are you sure you want to permanently delete this article?'} %></td>
    </tr>
  <% end %>
</table>